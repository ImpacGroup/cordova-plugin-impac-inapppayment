<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-impac-inapppayment" version="1.0.10"
    xmlns="http://apache.org/cordova/ns/plugins/1.0">
    <name>impac-inapppayment</name>

    <description>An Cordova plugin for iOS and Android that allows to make in app payments
    </description>
    <license>MIT</license>

    <keywords>cordova,android,ios,inapppayment</keywords>
    <repo>https://github.com/ImpacGroup/cordova-plugin-impac-inapppayment.git</repo>
    <issue>https://github.com/ImpacGroup/cordova-plugin-impac-inapppayment/issues</issue>

    <engines>
        <engine name="cordova" version=">=4.0.0" />
    </engines>

    <js-module name="impac-inapppayment" src="www/impac-inapppayment.js">
        <clobbers target="window.plugins.impacInappPayment" />
    </js-module>

    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="ImpacInappPayment">
                <param name="ios-package" value="ImpacInappPayment" />
            </feature>
        </config-file>
        <source-file src="src/ios/IMPProduct.swift" />
        <source-file src="src/ios/IMPStoreManager.swift" />
        <source-file src="src/ios/IMPCordovaStoreFacade.swift" />
        <source-file src="src/ios/IMPValidationConfig.swift" />
        <source-file src="src/ios/IMPValidationController.swift" />
        <source-file src="src/ios/IMPSKErrorHelper.swift" />
        <source-file src="src/ios/IMPValidationResult.swift" />
    </platform>

    <platform name="android">

        <config-file parent="/*" target="config.xml">
            <feature name="ImpacInappPayment">
                <param name="android-package"
                    value="de.impacgroup.inapppayment.ImpacInAppPayment" />
            </feature>
        </config-file>

        <source-file src="src/android/ImpacInAppPayment.java"
            target-dir="src/de/impacgroup/inapppayment" />
        <source-file src="src/android/IMPBillingManager.java"
            target-dir="src/de/impacgroup/inapppayment" />
        <source-file src="src/android/IMPBillingManagerListener.java"
            target-dir="src/de/impacgroup/inapppayment" />
        <source-file src="src/android/IMPProduct.java"
            target-dir="src/de/impacgroup/inapppayment" />
        <source-file src="src/android/IMPBillingResultHelper.java"
            target-dir="src/de/impacgroup/inapppayment" />
        <source-file src="src/android/IMPUpdateMessage.java"
            target-dir="src/de/impacgroup/inapppayment" />
        <source-file src="src/android/IMPBillingClientState.java"
            target-dir="src/de/impacgroup/inapppayment" />
        <source-file src="src/android/IMPValidationConfig.java"
            target-dir="src/de/impacgroup/inapppayment" />
        <source-file src="src/android/IMPValidationController.java"
            target-dir="src/de/impacgroup/inapppayment" />
        <source-file src="src/android/IMPValidationModel.java"
            target-dir="src/de/impacgroup/inapppayment" />
        <source-file src="src/android/IMPSharedPreferencesHelper.java"
            target-dir="src/de/impacgroup/inapppayment" />
        <framework src="com.android.billingclient:billing:7.1.1" />
        <framework src="com.google.code.gson:gson:2.11.0" />
        <framework src="com.android.volley:volley:1.2.1" />
        <framework src="javax.xml.bind:jaxb-api:2.3.1" />
        <framework src="org.glassfish.jaxb:jaxb-runtime:2.3.1" />
    </platform>
</plugin>
